{
    "name": "@edgelabs/cli",
    "description": "",
    "version": "0.0.1",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "pnpm build:tsc && pnpm build:ncc && pnpm build:bang",
        "build:tsc": "tsc -p ./tsconfig.json",
        "build:ncc": "ncc build ./lib/index.js -m -o dist --license LICENSE --target es6",
        "build:bang": "echo -e \"#!/usr/bin/env node\" > ./dist/edge.js && cat dist/index.js >> dist/edge.js && chmod +x ./dist/edge.js && rm ./dist/index.js",
        "lint": "eslint -c .eslintrc.json --ext .ts ./src",
        "pub": "pnpm build && pnpm publish --access public"
    },
    "keywords": [],
    "author": "Lucemans <luc@lucemans.nl>",
    "license": "LGPL-3.0-or-later",
    "devDependencies": {
        "@typescript-eslint/parser": "^5.30.7",
        "@vercel/ncc": "^0.34.0",
        "eslint": "^8.20.0",
        "eslint-plugin-lvksh": "^1.4.1",
        "pkg": "^5.8.0",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "@lvksh/logger": "^1.6.3",
        "permissio": "^2.0.2",
        "sunflake": "^0.5.0"
    }
}